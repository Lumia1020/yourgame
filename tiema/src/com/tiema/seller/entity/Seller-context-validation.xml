<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="sellerName">
		<field-validator type="requiredstring">
			<message><![CDATA[<b>角色名称</b> 为必填项。]]></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">10</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>姓名</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>

	<field name="deptName">
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>部门</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>

	<field name="jobTitle">
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>职称</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>

	<field name="mobile">
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>移动电话</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>

	<field name="im">
		<field-validator type="stringlength">
			<param name="maxLength">50</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>QQ/MSN</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>

	<field name="email">
		<field-validator type="email">
			<message><![CDATA[请输入合法的<b>电子邮件</b> 如:example@163.com]]></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">100</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>电子邮件</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>

	<field name="remark">
		<field-validator type="stringlength">
			<param name="maxLength">200</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>备注</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>
</validators>
