<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="default-role" namespace="/default/role" extends="struts-default">
		<action name="user-manage" class="roleAction" method="findAll">
			<result>/module/user/user_manage.jsp</result>
		</action>
		<action name="*">
			<result>/module/{1}/{1}_manage.jsp</result>
		</action>
	</package>

	<package name="json-role" namespace="/json/role" extends="json-default">
		<action name="page!*" class="roleAction">
			<result type="json">
				<param name="root">page</param>
				<param name="excludeProperties">^result.*\.permissions</param>
				<param name="includeProperties">^result.*,totalCount,success</param>
			</result>
		</action>
		<action name="map!*" class="roleAction">
			<result type="json">
				<param name="root">jsons</param>
				<param name="excludeProperties">role\.*permissions</param>
				<param name="includeProperties">
					^rolePermissionList\[\d+\]\..*,
					^allPermissionList\[\d+\]\..*,
					role\..*
				</param>
			</result>
		</action>
		<action name="success!*" class="roleAction">
			<result type="json">
				<param name="includeProperties">success,jsons.*</param>
			</result>
		</action>

		<action name="entity-*" class="roleAction" method="{1}">
			<interceptor-ref name="jsonValidationWorkflowStack"/>
			<result type="json">
				<param name="excludeProperties">role\..*permissions</param>
				<param name="includeProperties">role\..*,success</param>
			</result>
		</action>
	</package>
</struts>
