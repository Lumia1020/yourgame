<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="roleName">
		<field-validator type="requiredstring">
			<message><![CDATA[<b>角色名称</b> 为必填项。]]></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>角色名称</b> 最多${maxLength}个字符。]]></message>
		</field-validator>
		<field-validator type="roleNotExists">
			<param name="idName">id</param>
			<message><![CDATA[<b>“${role.roleName}”</b> 这个角色名称已经存在。]]></message>
		</field-validator>
	</field>
	<field name="remark">
		<field-validator type="stringlength">
			<param name="maxLength">200</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>角色说明</b> 最多${maxLength}个字符。]]></message>
		</field-validator>
	</field>
</validators>