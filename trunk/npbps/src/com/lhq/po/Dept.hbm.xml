<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.lhq.po.Dept" table="T_ZH_DEPART" lazy="true" batch-size="10" dynamic-update="true">
		<id name="uuid" unsaved-value="null">
			<generator class="uuid.hex" />
		</id>
		<property name="id" column="ID" length="4" />
		<property name="deptId" column="DEPART_ID" length="2" />
		<property name="deptName" column="DEPART_NAME" length="20" />
	</class>
</hibernate-mapping>
