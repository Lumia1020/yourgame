<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="golfClub.id">
		<field-validator type="required">
			<message><![CDATA[<b>俱乐部</b> 为必选项。]]></message>
		</field-validator>
	</field>

	<field name="dailyCost">
		<field-validator type="required">
			<message><![CDATA[<b>平日成本价</b> 必填项。]]></message>
		</field-validator>
		<field-validator type="double">
			<param name="minInclusive">0.00</param>
			<param name="maxInclusive">999999999.00</param>
			<message><![CDATA[<b>平日成本价</b> 必须在 ${minInclusive} 和 ${maxInclusive} 之间。]]></message>
		</field-validator>
	</field>

	<field name="weekdayPrice">
		<field-validator type="required">
			<message><![CDATA[<b>平日价格</b> 必填项。]]></message>
		</field-validator>
		<field-validator type="double">
			<param name="minInclusive">0.00</param>
			<param name="maxInclusive">999999999.00</param>
			<message><![CDATA[<b>平日价格</b> 必须在 ${minInclusive} 和 ${maxInclusive} 之间。]]></message>
		</field-validator>
	</field>

	<field name="holidayCost">
		<field-validator type="required">
			<message><![CDATA[<b>假日成本价</b> 必填项。]]></message>
		</field-validator>
		<field-validator type="double">
			<param name="minInclusive">0.00</param>
			<param name="maxInclusive">999999999.00</param>
			<message><![CDATA[<b>假日成本价</b> 必须在 ${minInclusive} 和 ${maxInclusive} 之间。]]></message>
		</field-validator>
	</field>

	<field name="holidayPrice">
		<field-validator type="required">
			<message><![CDATA[<b>假日价格</b> 必填项。]]></message>
		</field-validator>
		<field-validator type="double">
			<param name="minInclusive">0.00</param>
			<param name="maxInclusive">999999999.00</param>
			<message><![CDATA[<b>假日价格</b> 必须在 ${minInclusive} 和 ${maxInclusive} 之间。]]></message>
		</field-validator>
	</field>

	<field name="startDate">
		<field-validator type="required">
			<message><![CDATA[<b>开始日期</b> 必填项。]]></message>
		</field-validator>
	</field>
	<field name="endDate">
		<field-validator type="required">
			<message><![CDATA[<b>结束日期</b> 必填项。]]></message>
		</field-validator>
		<field-validator type="fieldexpression">
			<param name="expression"><![CDATA[endDate.getTime() >= startDate.getTime()]]></param>
			<message><![CDATA[<b>结束日期</b> ${endDate} 必须大于 <b>开始日期</b> ${startDate}]]></message>
		</field-validator>
	</field>

	<field name="remark">
		<field-validator type="stringlength">
			<param name="maxLength">200</param>
			<param name="trim">true</param>
			<message><![CDATA[<b>备注</b> 最多 ${maxLength} 个字符。]]></message>
		</field-validator>
	</field>
</validators>
