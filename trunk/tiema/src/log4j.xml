<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://www.tomaer.com/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="FILE" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="../logs/tiema.log" />
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="7" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%-5p] %c %x - %m%n" />
		</layout>
	</appender>
	<appender name="SQLLOG" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="../logs/tiema_hibernate.log" />
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="7" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%-5p] %c %x - %m%n" />
		</layout>
	</appender>
	<appender name="STRUTS2" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="../logs/tiema_struts2.log" />
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="7" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%-5p] %c %x - %m%n" />
		</layout>
	</appender>
	<appender name="XWORK2" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="../logs/tiema_xwork2.log" />
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="7" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%-5p] %c %x - %m%n" />
		</layout>
	</appender>
	<appender name="OGNL" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="../logs/tiema_ognl.log" />
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="7" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%-5p] %c %x - %m%n" />
		</layout>
	</appender>
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%-5p] %c %x - %m%n" />
		</layout>
	</appender>
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="SQLLOG" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.hibernate.tool.hbm2ddl" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="SQLLOG" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.apache.struts2" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="STRUTS2" />
	</logger>
	<logger name="com.opensymphony.xwork2" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="XWORK2" />
	</logger>
	<logger name="ognl" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="OGNL" />
	</logger>
	<logger name="com.tiema" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="FILE" />
	</logger>
	<root>
		<priority value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</root>
</log4j:configuration>
